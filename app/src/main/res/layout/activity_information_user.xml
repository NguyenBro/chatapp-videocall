<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.InformationUserActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewProfile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#DFDFDF"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_user_info"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/image_avatar"

            />

        <TextView
            android:id="@+id/username_profile_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="UserName"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageViewMail"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_email_profile_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Email:"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewMail"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageView
        android:id="@+id/imageViewPhone"
        android:layout_width="40dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMail"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_contact_phone_24"
        />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/phone"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewPhone"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <ImageView
        android:id="@+id/imageViewDate"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPhone"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_date_range_24"
        />

    <ImageView
        android:id="@+id/imageViewGender"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDate"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_person_pin_profile_24"
        />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/birthdate"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageViewDate"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGender"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_home_24"
        />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/gender"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewGender"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/imageViewLocal"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHome"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_location_on_24"
        />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/current_add"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewHome"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/home"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewLocal"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textViewMail_Info"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="19110407@student.hcmute.edu.vn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


    <TextView
        android:id="@+id/textViewPhone_Info"
        android:layout_width="282dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="0362963051"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textViewMail_Info" />

    <TextView
        android:id="@+id/textViewDate_Info"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="14/09/2001"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhone_Info" />

    <TextView
        android:id="@+id/textViewGender_Info"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="Nam"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate_Info" />

    <TextView
        android:id="@+id/textViewHome_Info"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="Quáº­n 9"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textViewGender_Info" />

    <TextView
        android:id="@+id/textViewLocal_Info"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="ÄÃ´ng HÃ²a - PhÃº YÃªn"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textViewHome_Info" />

</androidx.constraintlayout.widget.ConstraintLayout>