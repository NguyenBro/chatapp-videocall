<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_right"
            android:padding="8dp"
            android:text="hello"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/imageViewEmotion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/image_smiling"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_message"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="seen"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/imageViewBody"
            android:layout_width="230dp"
            android:layout_height="350dp"
            android:layout_below="@id/show_message"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_image"
            android:scaleType="fitStart"
            android:src="@drawable/pudding"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/videoViewBody"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/show_message"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:background="#9E9E9E"
            android:visibility="gone" />

        //================Audio
        <ImageView
            android:id="@+id/imageViewPlay"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/seekBarPlay"
            android:src="@drawable/ic_baseline_play_arrow_24"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageViewPause"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/seekBarPlay"
            android:src="@drawable/ic_baseline_pause_24"
            android:visibility="gone"/>

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/seekBarPlay"
            android:background="#C3C3C3"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>