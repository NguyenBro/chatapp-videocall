<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MeetingFragment">

    <Button
        android:id="@+id/buttonJoinMeet"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:onClick="onButtonClickk"
        android:text="@string/join"
        android:textColor="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toEndOf="@+id/conferenceNameId"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/conferenceNameId"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:contentDescription="Enter conference name..."
        android:ems="10"
        android:hint="@string/code_meeting"
        android:textColorHint="#545454"
        android:textColor="#050505"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <Button
        android:id="@+id/buttonCreateRoom"
        android:layout_width="367dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_button_phone"
        android:text="@string/create_room"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conferenceNameId" />

    <ListView
        android:id="@+id/listViewMeetingRoom"
        android:layout_width="410dp"
        android:layout_height="517dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreateRoom" />

</androidx.constraintlayout.widget.ConstraintLayout>